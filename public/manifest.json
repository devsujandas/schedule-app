{
  "name": "Daily Schedule – Productivity Tracker",
  "short_name": "Schedulaar",
  "description": "Stay focused and organized with Schedulaar — your all-in-one productivity hub for time tracking, notes, planning, and daily focus tools.",
  "start_url": "/?source=pwa",
  "scope": "/",
  "id": "/",
  "display": "standalone",
  "display_override": ["fullscreen", "standalone", "minimal-ui"],
  "orientation": "portrait-primary",

  "background_color": "#bde3f7",
  "theme_color": "#bde3f7",
  "dir": "ltr",
  "lang": "en",

  "prefer_related_applications": false,
  "categories": [
    "productivity",
    "utilities",
    "organization",
    "time-management",
    "focus"
  ],

  "icons": [
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-256x256.png",
      "sizes": "256x256",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    }
  ],

  "shortcuts": [
    {
      "name": "Open Clock",
      "short_name": "Clock",
      "description": "Check the current time and world clocks instantly.",
      "url": "/?view=clock",
      "icons": [
        { "src": "/schedulaar.png", "sizes": "192x192", "type": "image/png", "purpose": "any" }
      ]
    },
    {
      "name": "Start Stopwatch",
      "short_name": "Stopwatch",
      "description": "Track focus sessions and productivity intervals.",
      "url": "/?view=stopwatch",
      "icons": [
        { "src": "/schedulaar.png", "sizes": "192x192", "type": "image/png", "purpose": "any" }
      ]
    },
    {
      "name": "Set Timer",
      "short_name": "Timer",
      "description": "Manage time effectively with smart countdowns.",
      "url": "/?view=timer",
      "icons": [
        { "src": "/schedulaar.png", "sizes": "192x192", "type": "image/png", "purpose": "any" }
      ]
    },
    {
      "name": "Open Calculator",
      "short_name": "Calculator",
      "description": "Perform quick calculations while staying focused.",
      "url": "/tools/calculator",
      "icons": [
        { "src": "/schedulaar.png", "sizes": "192x192", "type": "image/png", "purpose": "any" }
      ]
    }
  ],

  "screenshots": [
    {
      "src": "/screenshots/home-light.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Light Mode — Dashboard"
    },
    {
      "src": "/screenshots/home-dark.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Dark Mode — Planner Overview"
    },
    {
      "src": "/screenshots/tools.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "label": "All Productivity Tools in One Place"
    }
  ],

  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://yourdomain.com/manifest.json"
    }
  ],

  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },

  "handle_links": "preferred",

  "protocol_handlers": [
    {
      "protocol": "web+schedule",
      "url": "/?open=%s"
    }
  ],

  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        { "name": "file", "accept": ["text/plain", "image/*"] }
      ]
    }
  }
}
