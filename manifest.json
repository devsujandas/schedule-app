{
  "name": "Daily Schedule - Productivity Tracker",
  "short_name": "Schedule",
  "description": "Track time, manage tasks, and boost focus with clock, stopwatch, timer, and daily planner â€” all in one smart productivity app.",
  "start_url": "/?source=pwa",
  "scope": "/",
  "id": "/",
  "display": "standalone",
  "display_override": ["fullscreen", "standalone", "minimal-ui"],
  "orientation": "portrait-primary",
  "background_color": "#ffffff",
  "theme_color": "#1e3a5f",
  "dir": "ltr",
  "lang": "en",
  "prefer_related_applications": false,
  "categories": [
    "productivity",
    "utilities",
    "time-management",
    "lifestyle",
    "organization"
  ],
  "shortcuts": [
    {
      "name": "Open Clock",
      "short_name": "Clock",
      "description": "View the current time and world clocks.",
      "url": "/?view=clock",
      "icons": [
        { "src": "/icons/shortcut-clock.png", "sizes": "96x96", "type": "image/png" }
      ]
    },
    {
      "name": "Start Stopwatch",
      "short_name": "Stopwatch",
      "description": "Quickly start tracking time intervals.",
      "url": "/?view=stopwatch",
      "icons": [
        { "src": "/icons/shortcut-stopwatch.png", "sizes": "96x96", "type": "image/png" }
      ]
    },
    {
      "name": "Set Timer",
      "short_name": "Timer",
      "description": "Launch the timer to manage sessions efficiently.",
      "url": "/?view=timer",
      "icons": [
        { "src": "/icons/shortcut-timer.png", "sizes": "96x96", "type": "image/png" }
      ]
    },
    {
      "name": "Open Calculator",
      "short_name": "Calculator",
      "description": "Quickly perform calculations on the go.",
      "url": "/tools/calculator",
      "icons": [
        { "src": "/icons/shortcut-calculator.png", "sizes": "96x96", "type": "image/png" }
      ]
    }
  ],
  "icons": [
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-256x256.png",
      "sizes": "256x256",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/home-dark.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Dark mode view"
    },
    {
      "src": "/screenshots/home-light.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Light mode view"
    },
    {
      "src": "/screenshots/tools.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "label": "Productivity Tools Page"
    }
  ],
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://yourdomain.com/manifest.json"
    }
  ],
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  "handle_links": "preferred",
  "protocol_handlers": [
    {
      "protocol": "web+schedule",
      "url": "/?open=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [{ "name": "file", "accept": ["text/plain", "image/*"] }]
    }
  }
}
